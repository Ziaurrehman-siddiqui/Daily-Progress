#marks analyser
marks = []

for i in range(5):
    m = int(input(f"Enter marks of Student {i+1}: "))
    marks.append(m)

# total and average
total = sum(marks)
average = total / len(marks)

# maximum marks
highest = max(marks)

# count passed students >=40
passed = 0
for m in marks:
    if m >= 40:
        passed = passed + 1

# RESULT SHEET
print("\n--- RESULT SHEET ---")
print("Marks list:", marks)
print("Total marks:", total)
print("Average marks:", average)
print("Highest marks:", highest)
print("Passed students:", passed)

print("\n--- Student Wise Result ---")
for i in range(len(marks)):
    if marks[i] >= 40:
        result = "Pass"
    else:
        result = "Fail"
    print(f"Student {i+1}: {marks[i]} -> {result}")
